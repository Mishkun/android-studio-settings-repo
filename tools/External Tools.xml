<toolSet name="External Tools">
  <tool name="Push Screenshots" description="Push Screenshots To The Device" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$ProjectFileDir$/scripts/push_screenshots.sh" />
      <option name="PARAMETERS" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="Pull Screenshots" description="Pull Screenshots From The Device" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="$ProjectFileDir$/scripts/pull_screenshots.sh" />
      <option name="PARAMETERS" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="Show Allure Results" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="false">
    <exec>
      <option name="COMMAND" value="kscript $ProjectFileDir$/scripts/run_allure_results.kts" />
      <option name="PARAMETERS" />
      <option name="WORKING_DIRECTORY" value="$ProjectFileDir$" />
    </exec>
  </tool>
  <tool name="Launch Screenshots Emulator" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="false">
    <exec>
      <option name="COMMAND" value="emulator" />
      <option name="PARAMETERS" value="-avd SHOT_SCREEN_Pixel_2_API_26" />
      <option name="WORKING_DIRECTORY" value="~/Library/Android/sdk/emulator" />
    </exec>
  </tool>
  <tool name="Launch Dev Emulator" description="./Library/Android/sdk/emulator/emulator" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="false">
    <exec>
      <option name="COMMAND" value="./emulator" />
      <option name="PARAMETERS" value="-avd Pixel_2_API_29" />
      <option name="WORKING_DIRECTORY" value="$USER_HOME$/Library/Android/sdk/emulator" />
    </exec>
  </tool>
</toolSet>